#!/usr/bin/env groovy

node("mesos") {
    stage ('Pull dcos-cli repository') {
        dir('dcos-cli') {
            checkout scm
        }
    }

    dir('dcos-cli') {
        stage ("Build binary") {
            sh "make"
            sh "./build/linux/dcos"
        }

        stage ("Run tests") {
            sh "make test"
        }
    }
}
